/dts-v1/;

#include "pentagram-sp7021-achip.dtsi"

#include <dt-bindings/interrupt-controller/arm-gic.h>

/ {
	model = "Sunplus SC7021 EMU (CA7)";
	compatible = "sunplus,sc7021-achip";

	chosen {
		bootargs = "console=ttyS0,115200 root=/dev/ram rw loglevel=8 user_debug=255 earlyprintk";
	};

	memory {
		reg = <0x00000000 0x20000000>; /* 512MB */
	};
};

&i2cm0{
 pinctrl-names = "default";
 pinctrl-0 = <&i2cm0_pins>;
 status = "okay";
	/* clock-frequency = <100000>; */
	clock-frequency = <400000>;
	st33htbpi: st33htbpi@0{
		compatible = "st,st33htpm-i2c";
		reg = <0x2E>;
		status = "okay";
	};
};

&i2cm1{
 pinctrl-names = "default";
 pinctrl-0 = <&i2cm1_pins>;
 status = "okay";
	/* clock-frequency = <100000>; */
	clock-frequency = <400000>;
	st33htpi: st33htpi@0{
		compatible = "st,st33htpm-i2c";
		reg = <0x2E>;
		status = "okay";
	};
};

&pctl {
 i2cm0_pins: i2cm0_pins {                                   
  sppctl,pins = <                                            
       SP7021_IOPAD(8,SP7021_PCTL_G_PMUX,MUXF_I2CM0_CK,0) 
       SP7021_IOPAD(9,SP7021_PCTL_G_PMUX,MUXF_I2CM0_DAT,0)        
  >;                                                        
 }; 
 
 i2cm1_pins: i2cm1_pins {                                   
  sppctl,pins = <                                            
       SP7021_IOPAD(10,SP7021_PCTL_G_PMUX,MUXF_I2CM1_CK,0) 
       SP7021_IOPAD(11,SP7021_PCTL_G_PMUX,MUXF_I2CM1_DAT,0)        
  >;                                                        
 }; 
 }; 
